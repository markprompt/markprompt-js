{
  "name": "markprompt",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm pack --workspaces",
    "build:packages": "npm run build -w @markprompt/core -w @markprompt/docusaurus-theme-search -w @markprompt/react -w @markprompt/web",
    "lint": "run-p lint:css lint:format lint:js lint:md lint:ts",
    "lint:css": "npx stylelint \"**/*.css\"",
    "lint:format": "prettier --check .",
    "lint:js": "eslint . --quiet",
    "lint:md": "remark . --frail",
    "lint:ts": "npm run build && rm *.tgz",
    "prepare": "husky install",
    "publish": "npm run build:packages && changeset publish",
    "test": "vitest run --coverage",
    "version": "changeset version && npm install"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.0.1",
    "eslint-plugin-vitest": "^0.3.18",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "msw": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "path-exists-cli": "^2.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-packagejson": "^2.4.5",
    "remark-cli": "^11.0.0",
    "remark-frontmatter": "^4.0.1",
    "remark-toc": "^8.0.1",
    "remark-validate-links": "^12.1.1",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-formatter-github": "^1.0.1",
    "typescript": "~5.2.2",
    "unified-prettier": "^2.0.0",
    "vitest": "^1.1.0"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18"
  },
  "devDependencies": {
    "@vitest/ui": "^1.1.0"
  }
}
