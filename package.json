{
  "name": "markprompt",
  "private": true,
  "type": "module",
  "workspaces": ["examples/*", "packages/*"],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter @markprompt/*...",
    "clean": "git clean -fdx -e .direnv/ -e \"examples/**/.env*\" -e \".husky/\"",
    "postinstall": "manypkg check",
    "lint": "turbo run lint:biome lint:css lint:js lint:md lint:ts",
    "lint:biome": "biome check",
    "lint:biome:ci": "biome ci --reporter=github",
    "lint:ci": "turbo run lint:biome:ci lint:css lint:js lint:md lint:ts",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:js": "eslint . --ignore-pattern \"coverage/\" --ignore-pattern \"examples/\" --ignore-pattern \"packages/\"",
    "lint:md": "remark . --frail",
    "lint:ts": "pnpm build:packages",
    "prepare": "husky",
    "publish": "pnpm build:packages && changeset publish",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "version": "changeset version && biome check --write . && pnpm install"
  },
  "dependencies": {
    "@biomejs/biome": "1.9.2",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@manypkg/cli": "^0.21.4",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "8.57.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "msw": "^2.2.13",
    "remark-cli": "^12.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-toc": "^9.0.0",
    "remark-validate-links": "^13.0.1",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-formatter-github": "^1.0.1",
    "turbo": "^2.1.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^7.7.0",
    "unified-prettier": "^2.0.1",
    "vitest": "^1.6.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.17.2"
  },
  "packageManager": "pnpm@9.10.0+sha512.73a29afa36a0d092ece5271de5177ecbf8318d454ecd701343131b8ebc0c1a91c487da46ab77c8e596d6acf1461e3594ced4becedf8921b074fbd8653ed7051c",
  "pnpm": {
    "overrides": {
      "@types/react": "^18.2",
      "@types/react-dom": "^18.2",
      "react": "^18.2",
      "react-dom": "^18.2"
    }
  }
}
