{
  "compilerOptions": {
    // base
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2023",
    "moduleDetection": "force",
    "isolatedModules": true,
    "checkJs": true,

    // strictness
    "strict": true,

    // transpilation
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "src/",
    "outDir": "dist/",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // runtime
    "lib": ["dom", "dom.iterable", "es2023"]
  },
  "include": ["src/"],
  "exclude": ["**/node_modules", "src/**/*.test.ts", "dist/"]
}
