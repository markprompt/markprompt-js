{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "composite": true,
    "rootDir": "src",
    "module": "node16",
    "target": "es2021",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "outDir": "dist/",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/*"],
  "exclude": ["src/*.test.ts"]
}
