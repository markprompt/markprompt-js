{
  "include": ["src"],
  "references": [{ "path": "../react/tsconfig.build.json" }],
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "es2022",
    "lib": ["DOM", "ESNext"],
    "isolatedModules": true,
    "types": ["@docusaurus/module-type-aliases"],
    "paths": {
      "@markprompt/core": ["../core/src"],
      "@markprompt/react": ["../react/src"],
    },
  },
}
