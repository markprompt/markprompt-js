{
  "include": ["src"],
  "references": [{ "path": "../react" }],
  "compilerOptions": {
    "composite": true,
    "module": "node16",
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "jsx": "react",
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "es2021",
    "isolatedModules": true,
    "types": ["@docusaurus/module-type-aliases"]
  }
}
