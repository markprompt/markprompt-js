{
  "references": [{ "path": "../core" }],
  "include": ["src/"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/vitest.setup.ts"],
  "compilerOptions": {
    "lib": ["dom", "es2022"],
    "composite": true,
    "module": "node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "jsx": "react",
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "es2021",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@markprompt/core": ["../core/src"]
    }
  }
}
