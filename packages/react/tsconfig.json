{
  "compilerOptions": {
    // base
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2023",
    "moduleDetection": "force",
    "isolatedModules": true,
    "checkJs": true,

    // strictness
    "strict": true,
    "types": ["@testing-library/jest-dom"],

    // transpilation
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "noEmit": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,

    // runtime
    "lib": ["dom", "dom.iterable", "es2023"]
  },
  "include": ["./"],
  "exclude": [".turbo/", "**/node_modules", "dist/"]
}
