{
  "include": ["src"],
  "references": [{ "path": "../core" }],
  "compilerOptions": {
    "composite": true,
    "module": "node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "jsx": "react",
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "es2021",
    "isolatedModules": true
  },
  "exclude": ["dist/", "examples/*"]
}
