{
  "references": [{ "path": "../core" }],
  "include": ["src/"],
  "compilerOptions": {
    // base
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "moduleDetection": "force",
    "isolatedModules": true,

    // strictness
    "strict": true,

    "types": ["@testing-library/jest-dom"],

    // transpilation
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist/",
    "rootDir": "src/",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,

    // runtime
    "lib": ["dom", "dom.iterable", "es2023"]
  }
}
