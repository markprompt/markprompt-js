{
  "compilerOptions": {
    // base
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2023",
    "moduleDetection": "force",
    "isolatedModules": true,
    "checkJs": true,

    // strictness
    "strict": true,
    "types": ["@testing-library/jest-dom"],

    // transpilation
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "src/",
    "outDir": "dist/",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,

    // runtime
    "lib": ["dom", "dom.iterable", "es2023"]
  },
  "include": ["src/"],
  "exclude": [
    ".turbo/",
    "**/node_modules",
    "dist/",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/test-utils.ts"
  ]
}
