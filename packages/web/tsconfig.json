{
  "references": [{ "path": "../core" }],
  "compilerOptions": {
    "module": "node16",
    "rootDir": "src",
    "target": "es2021",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "outDir": "dist/",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "verbatimModuleSyntax": true,
    "plugins": [{ "name": "ts-lit-plugin" }]
  }
}
