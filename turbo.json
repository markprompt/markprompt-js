{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".editorconfig",
    ".eslintrc.js",
    ".npmrc",
    ".prettierignore",
    ".stylelintignore",
    ".stylelintrc.json",
    "prettier.config.js",
    "vitest.workspace.json"
  ],
  "tasks": {
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "//#lint:css": {},
    "//#lint:format": {},
    "//#lint:js": {},
    "//#lint:md": {},
    "//#lint:ts": {},
    "//#test": {
      "outputs": [
        "coverage/**"
      ]
    }
  }
}
