{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["NODE_ENV", "ENABLE_EXPERIMENTAL_COREPACK"],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "//#lint:css": {},
    "//#lint:format": {},
    "//#lint:js": {},
    "lint:js": {},
    "//#lint:md": {},
    "//#lint:ts": {},
    "lint:ts": {},
    "//#test": {
      "outputs": ["coverage/**"]
    }
  }
}
